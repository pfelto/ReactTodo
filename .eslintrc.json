{
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions":{
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx":true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-debugger": "warn",
      "no-console":"warn",
      "no-unused-vars": "warn",
      "react/prop-types": "warn",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }